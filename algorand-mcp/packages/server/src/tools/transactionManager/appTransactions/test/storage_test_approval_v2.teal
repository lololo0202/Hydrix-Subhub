#pragma version 8

// Handle each possible OnCompletion type
txn OnCompletion
int NoOp
==
bnz handle_noop

txn OnCompletion
int OptIn
==
bnz handle_optin

txn OnCompletion
int CloseOut
==
bnz handle_closeout

txn OnCompletion
int UpdateApplication
==
bnz handle_updateapp

txn OnCompletion
int DeleteApplication
==
bnz handle_deleteapp

// Unexpected OnCompletion value. Should be unreachable.
err

handle_noop:
    // Handle NoOp
    // Check if this is the creation call
    txn ApplicationID
    int 0
    ==
    bnz handle_creation

    // Otherwise, must be an update call
    // Get the first argument
    txna ApplicationArgs 0
    byte "update"
    ==
    bnz handle_update

    // Unrecognized operation
    err

handle_creation:
    // Initialize storage
    byte "counter1"
    int 0
    app_global_put

    byte "counter2"
    int 0
    app_global_put

    byte "name"
    byte "test app v2"
    app_global_put

    byte "status"
    byte "active"
    app_global_put

    int 1
    return

handle_update:
    // Update counters with different increments
    byte "counter1"
    byte "counter1"
    app_global_get
    int 5
    +
    app_global_put

    byte "counter2"
    byte "counter2"
    app_global_get
    int 10
    +
    app_global_put

    int 1
    return

handle_optin:
    // Always allow opt in
    int 1
    return

handle_closeout:
    // Always allow close out
    int 1
    return

handle_updateapp:
    // Only allow creator to update
    txn Sender
    global CreatorAddress
    ==
    return

handle_deleteapp:
    // Only allow creator to delete
    txn Sender
    global CreatorAddress
    ==
    return
